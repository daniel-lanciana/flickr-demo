<%= render 'header' %>

<div class="container">
  <h1 class="page-header">Results</h1>

  <%= render 'form' %>

  <br />

  <div class="row thumbs">
    <% @results.each do |photo, index| %>
        <div class="col-xs-6 col-md-3">
          <a data-toggle="lightbox" href="<%= photo.url_c %>" class="thumbnail" data-type="image">
            <%= image_tag photo.url_q %>
          </a>
        </div>
    <% end %>
  </div>

  <% if @results.any? %>
    <%= will_paginate @results, renderer: BootstrapPagination::Rails %>
  <% end %>
</div>